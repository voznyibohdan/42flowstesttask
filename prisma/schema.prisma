generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Request {
  id         String   @id @default(cuid())
  input_text String
  title      String?
  status     String
  type       String?
  config     Json?
  created_at DateTime @default(now())

  @@index([status, type, created_at])
  @@index([title])
}
